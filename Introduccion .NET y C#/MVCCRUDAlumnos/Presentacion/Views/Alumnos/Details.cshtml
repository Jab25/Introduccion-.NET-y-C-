<button type="button" runat="server" class="btn btn-info" OnClick="AportacionesIMSS();" data-toggle="modal" data-target="#myModalcliente">IMSS</button>
<button type="button" runat="server" class="btn btn-info" OnClick="TablaISR();" data-toggle="modal" data-target="#myModalcliente">ISR</button>

<!-- Ventana Modal -->
<div class="modal" id="myModalcliente">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Encabezado Modal -->
            <div class="modal-header">
                <h4 class="modal-title"></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Curepo de la Modal -->
            <div class="modal-body" id="cuerpo">

            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
            </div>

        </div>
    </div>
</div>

<script type="text/javascript">
    function AportacionesIMSS() {
        var id = $("#idAlumno").text();
        var url = "/Alumnos/_AportacionesIMSS/" + id;
        LLamaAJAXGET(url, muestraModal);

    }

    function TablaISR() {
         var id = $("#idAlumno").text();
        var url = "/Alumnos/_TablaISR/" + id;
        LLamaAJAXGET(url, muestraModal);
    }

    function muestraModal(response) {
        $("#cuerpo").html(response);
        $("#myModalcliente").modal();
    }
</script>

